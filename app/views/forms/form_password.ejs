<!DOCTYPE html>
<html>
<% include ../layout %>

<body>
    <!-- Sidenav -->
    <% include ../partials/sidebar %>
    <!-- Main content -->
    <div class="main-content">
        <!-- Top navbar -->
        <% include ../partials/navbar %>
        <!-- Header -->
        <% include ../partials/profile/header %>
        <!-- Page content -->

        <div class="container-fluid mt--7">
            <div class="row">
                <div class="col-xl-4 order-xl-2 mb-5 mb-xl-0">
                </div>
                <div class="col-xl-10 order-xl-w">
                    <div class="card bg-secondary shadow">
                            <% include ../partials/message %>

                        <div class="card-header bg-white border-0">
                            <div class="row align-items-center">
                                <div class="col-8">
                                    <h3 class="mb-0">Alterar Senha</h3>
                                </div>

                            </div>
                        </div>
                        <div class="card-body">
                           
                                <form action="/user/passup" method="POST">
                                    <h6 class="heading-small text-muted mb-4">Senha</h6>
                                    <div class="pl-lg-4">
                                        <div class="row">
                                            <div class="col-lg-6">
                                                <div class="form-group">
                                                    <label class="form-control-label" for="input-username">Senha Atual</label>
                                                    <input type="password" id="senhaatual" name="passwordCurrent"
                                                        class="form-control form-control-alternative"
                                                        require>
                                                </div>
                                            </div>
                                        </div>
                                        <hr class="my-4" />
                                        <div class="row">
                                            <div class="col-lg-6">
                                                <div class="form-group">
                                                    <label class="form-control-label" for="input-email">Nova Senha</label>
                                                    <input type="password" id="senhanova"
                                                        name="passwordNew"
                                                        class="form-control form-control-alternative"
                                                        require>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-lg-6">
                                                <div class="form-group">
                                                    <label class="form-control-label">Confirmar Senha</label>
                                                    <input type="password" id="senhaconfimar" name="passwordConfirm"
                                                        class="form-control form-control-alternative"
                                                        require>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <hr class="my-4" />
                                    <input type="submit" class="btn btn-info" value="Alterar Senha"></input>
                                </form>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Footer -->
            <% include ../partials/footer %>

        </div>
    </div>
    <!-- Argon Scripts -->
    <!-- Core -->
    <% include ../partials/scripts %>

</body>

</html>