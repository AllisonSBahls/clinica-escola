<!DOCTYPE html>
<html>
<% include ../layout %>

<body>
    <!-- Sidenav -->
    <% include ../partials/sidebar %>
    <!-- Main content -->
    <div class="main-content">
        <!-- Top navbar -->
        <% include ../partials/navbar %>
        <!-- Header -->
        <% include ../partials/profile/header %>
        <!-- Page content -->

        <div class="container-fluid mt--7">
            
            <div class="row">
                <div class="col-xl-4 order-xl-2 mb-5 mb-xl-0">
                </div>
                <div class="col-xl-10 order-xl-w">
                    <div class="card bg-secondary shadow">
                        <div class="card-header bg-white border-0">
                            <div class="row align-items-center">
                                <div class="col-8">
                                    <h3 class="mb-0">Supervisores</h3>
                                </div>

                            </div>
                        </div>
                        <div class="card-body">
                            <form action="/paciente/update/<%= patient.id %>" id="form-update-patient" method="POST">
                                <form method="get" action=".">
                                <h6 class="heading-small text-muted mb-4">Informações da Recepcionista</h6>
                                    <div class="pl-lg-4">
                                        <div class="row">
                                            <div class="col-lg-6">
                                                <div class="form-group">
                                                    <label class="form-control-label" for="input-username">Nome
                                                        Completo</label>
                                                    <input type="text" id="nome" name="name"
                                                        class="form-control form-control-alternative"
                                                        placeholder="Nome Completo" disabled
                                                        value="<%= patient.name %>">
                                                </div>
                                            </div>
                                            <div class="col-lg-6">
                                                <div class="form-group">
                                                    <label class="form-control-label">Contato</label>
                                                    <input type="text" id="telefone"
                                                        name="phone"
                                                        class="form-control form-control-alternative"
                                                        placeholder="Telefone" disabled
                                                        value="<%= patient.phone %>">
                                                </div>

                                            </div>
                                        </div>
                                        <div class="row">
                                        <div class="col-lg-6">
                                            <div class="form-group">
                                                <label class="form-control-label" for="input-username">Data de Nascimento</label>
                                                <input type="date" id="dataNasc" name="dateBirth" disabled
                                                    class="form-control form-control-alternative"
                                                    placeholder="Curso"  value="<%= moment.utc(patient.dateBirth).format('YYYY-MM-DD') %>">
                                            </div>
                                        </div>
                                        <div class="col-lg-6">
                                                <div class="form-group">
                                                    <label class="form-control-label">Genero</label>
                                                    <select class="form-control" name="gender" id="gender" disabled
                                                        data-placeholder="Selecione">
\                                                        <% if (patient.gender == 1) {  %>
                                                        <option value="1">Feminino</option>
                                                        <option value="2">Masculino</option>
                                                        <%  }else{ %>
                                                        <option value="2">Masculino</option>
                                                        <option value="1">Feminino</option>

                                                        <% } %>
                                                    </select>
                                                </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                            <div class="col-lg-5">
                                                <div class="form-group">
                                                    <label class="form-control-label"
                                                        for="input-username">Escolaridade</label>
                                                    <select class="form-control" id="schooling" name="schooling" disabled
                                                        data-placeholder="Selecione"> 
                                                        <% if (patient.schooling == 1) {  %>
                                                            <option value="<%= patient.schooling %>">Ensino Fundamento</option>
                                                            <option value="2">Ensino Médio</option>
                                                            <option value="3">Ensino Superior</option>
                                                        <% }else if (patient.schooling == 2) {  %>
                                                            <option value="<%= patient.schooling %>">Ensino Médio</option>
                                                            <option value="1">Ensino Fundamento</option>
                                                            <option value="3">Ensino Superior</option>
                                                        <%  }else{ %>
                                                            <option value="<%= patient.schooling %>">Ensino Superior</option>
                                                            <option value="1">Ensino Fundamento</option>
                                                            <option value="2">Ensino Médio</option>
                                                        <% } %>

                                                    </select>
                                                </div>
                                            </div>
                                            <div class="col-lg-3">
                                                <div class="form-group">
                                                    <div class="form-group">
                                                        <label class="form-control-label">Estado Civil</label>
                                                        <select class="form-control" name="maritalstatus" disabled id="maritalstatus"
                                                            data-placeholder="Selecione"> 
                                                            <% if (patient.maritalstatus == 1) {  %>
                                                                <option value="<%= patient.maritalstatus %>">Solteiro(a)</option>
                                                                <option value="2">Casado(a)</option>
                                                                <option value="3">Divorciado(a)</option>
                                                                <option value="4">Viúvo(a) </option>
                                                                <option value="5">Separado(a)</option>
                                                            <% }else if (patient.maritalstatus == 2) {  %>
                                                                <option value="<%= patient.maritalstatus %>">Casado(a)</option>
                                                                <option value="1">Solteiro(a)</option>
                                                                <option value="3">Divorciado(a)</option>
                                                                <option value="4">Viúvo(a) </option>
                                                                <option value="5">Separado(a)</option>
                                                            <% }else if (patient.maritalstatus == 3) {  %>
                                                                <option value="<%= patient.maritalstatus %>">Divorciado(a)</option>
                                                                <option value="1">Solteiro(a)</option>
                                                                <option value="2">Casado(a)</option>
                                                                <option value="4">Viúvo(a) </option>
                                                                <option value="5">Separado(a)</option>
                                                            <% }else if (patient.maritalstatus == 4) {  %>
                                                                <option value="<%= patient.maritalstatus %>">Viúvo(a) </option>

                                                                <option value="1">Solteiro(a)</option>
                                                                <option value="2">Casado(a)</option>
                                                                <option value="3">Divorciado(a)</option>
                                                                <option value="5">Separado(a)</option>
                                                            <%  }else{ %>
                                                                <option value="<%= patient.maritalstatus %>">Separado(a)</option>
                                                                <option value="1">Solteiro(a)</option>
                                                                <option value="2">Casado(a)</option>
                                                                <option value="3">Divorciado(a)</option>
                                                                <option value="4">Viúvo(a) </option>
                                                            <% } %>

                                                        </select>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-lg-4">
                                                <div class="form-group">
                                                    <div class="form-group">
                                                        <label class="form-control-label">Conjugue</label>
                                                        <input type="text" name="spouse" id="spouse"
                                                        class="form-control form-control-alternative" disabled
                                                        placeholder="Conjugue" value="<%= patient.spouse %>">
                                                       
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <hr class="my-4" />
                                        <h6 class="heading-small text-muted mb-4">Localização</h6>
                                        <div class="row">
                                            <div class="col-lg-5">
                                                <div class="form-group">
                                                    <label class="form-control-label" for="input-email">CEP</label> 
                                                    <input type="email" id="cep" name="cepCidade"  onblur="pesquisacep(this.value);"
                                                    disabled  class="form-control form-control-alternative" placeholder="CEP" value="<%= patient.cep %>">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-lg-8">
                                                <div class="form-group">
                                                    <label class="form-control-label" for="input-email">Endereço</label>
                                                    <input type="email" id="rua" name="address" disabled
                                                        class="form-control form-control-alternative" placeholder="Endereço"  value="<%= patient.address %>">
                                                </div>
                                            </div>
                                            <div class="col-lg-4">
                                                <div class="form-group">
                                                    <label class="form-control-label" for="input-email">Número</label>
                                                    <input type="email" id="number" name="number" disabled
                                                        class="form-control form-control-alternative" placeholder="Número" value="<%= patient.number %>">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-lg-6">
                                                <div class="form-group">
                                                    <label class="form-control-label" for="input-email">Bairro</label>
                                                    <input type="email" id="bairro" name="district" disabled
                                                        class="form-control form-control-alternative" placeholder="Bairro" value="<%= patient.district %>">
                                                </div>
                                            </div>
                                            <div class="col-lg-4">
                                                <div class="form-group">
                                                    <label class="form-control-label" for="input-email">Cidade</label>
                                                    <input type="email" id="cidade" name="country" disabled value="<%= patient.country %>"
                                                        class="form-control form-control-alternative">
                                                </div>
                                            </div>
                                            <div class="col-lg-2">
                                                <div class="form-group">
                                                    <label class="form-control-label" for="input-email">Estado</label>
                                                    <input type="email" id="uf" name="uf" disabled
                                                        class="form-control form-control-alternative" placeholder="Estado" value="<%= patient.UF %>">
                                                </div>
                                            </div>
                                        </div>
                                    <hr class="my-4" />
                                        <div class="row">
                                            <div class="col-lg-6">
                                                <div class="form-group">
                                                    <label class="form-control-label" for="input-email">Endereço de
                                                        E-mail</label>
                                                    <input type="email" id="email"
                                                        name="email" disabled
                                                        class="form-control form-control-alternative" 
                                                        placeholder="E-mail"
                                                        value="<%= patient.userPatient.email %>">
                                                </div>
                                            </div>
                                            <div class="col-lg-6">
                                                <div class="form-group">
                                                    <label class="form-control-label"
                                                        for="input-email">Permissoes</label>
                                                    <input type="text" id="fkPermissoes" name="fkPermissoes"
                                                        class="form-control form-control-alternative" disabled
                                                        placeholder="E-mail" value="Paciente">
                        
                                                
                                                </div>
                                            </div>


                                        </div>

                                        <div class="row">

                                            <div class="col-lg-6">
                                                <div class="form-group">
                                                    <label class="form-control-label" for="input-last-name">Data de
                                                        Registro</label>
                                                    <input type="text" id="dataRegistro" name="dataRegistro"
                                                        class="form-control form-control-alternative" disabled
                                                        placeholder="Registro" value="<%= moment(patient.createdAt).format('DD/MM/YYYY')  %>">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <hr class="my-4" />

                                    <input type="hidden" value="<%= patient.userPatientId  %>"
                                    id="id" name="idUser"></input>
                                </form>
        
                                    <input type="hidden" value="<%= patient.id  %>"
                                        id="idPatient" name="id">
                                        <a id="enable-update" class="btn btn-info" value="Editar"><i class="ni ni-ruler-pencil text-white"></i>Editar</a>
                                    <input onclick="updatePatient();"class="btn btn-success" id = "update-form" value="Salvar Alterações"></input>
                                </form>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Footer -->
            <% include ../partials/footer %>

        </div>
    </div>
    <!-- Argon Scripts -->
    <!-- Core -->
    <% include ../partials/scripts %>

</body>

</html>