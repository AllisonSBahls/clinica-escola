<!DOCTYPE html>
<html>
<% include ../layout %>

<body>
    <!-- Sidenav -->
    <% include ../partials/sidebar %>
    <!-- Main content -->
    <div class="main-content">
        <!-- Top navbar -->
        <% include ../partials/navbar %>
        <!-- Header -->
        <% include ../partials/profile/header %>
        <!-- Page content -->

        <div class="container-fluid mt--7">
            <div class="row">
                <div class="col-xl-4 order-xl-2 mb-5 mb-xl-0">
                </div>
                <div class="col-xl-10 order-xl-w">
                    <div class="card bg-secondary shadow">
                        <div class="card-header bg-white border-0">
                            <div class="row align-items-center">
                                <div class="col-8">
                                    <h3 class="mb-0">Estagiário</h3>
                                </div>

                            </div>
                        </div>
                        <div class="card-body">
                            <form action="/estagiario/update/<%= trainee.id %>" method="POST">
                                <h6 class="heading-small text-muted mb-4">Informações do Estagiário</h6>
                                <div class="pl-lg-4">
                                    <div class="row">
                                        <div class="col-lg-6">
                                            <div class="form-group">
                                                <label class="form-control-label" for="input-username">Nome
                                                    Completo</label>
                                                <input type="text" id="nome" name="name"
                                                    class="form-control form-control-alternative" disabled  
                                                    placeholder="Nome Completo" value="<%= trainee.name %>">
                                            </div>
                                        </div>
                                        <div class="col-lg-6">
                                            <div class="form-group">
                                                <label class="form-control-label">Contato</label>
                                                <input type="text" id="telefone" name="phone" disabled
                                                    class="form-control form-control-alternative" placeholder="Telefone"
                                                    value="<%= trainee.phone %>">
                                            </div>

                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-lg-6">
                                            <div class="form-group">
                                                <label class="form-control-label" for="input-username">Curso</label>
                                                <input type="text" id="curso" name="course" disabled
                                                    class="form-control form-control-alternative" placeholder="Curso"
                                                    value="<%= trainee.course %>">
                                            </div>
                                        </div>
                                        <div class="col-lg-6">
                                            <div class="form-group">
                                                <label class="form-control-label">Periodo</label>
                                                    <select class="form-control" name="period" id="periodo" disabled
                                                    data-placeholder="Selecione">
                                                    <option value="<%= trainee.period %>"><%= trainee.period %></option>
                                                    <option value="1">1</option>
                                                    <option value="2">2</option>
                                                    <option value="3">3</option>
                                                    <option value="4">4</option>
                                                    <option value="5">5</option>
                                                    <option value="6">6</option>
                                                    <option value="7">7</option>
                                                    <option value="8">8</option>
                                                    <option value="9">9</option>
                                                    <option value="10">10</option>
                                                </select>

                                            </div>

                                        </div>
                                    </div>
                                    <hr class="my-4" />
                                    <div class="row">
                                        <div class="col-lg-6">
                                            <div class="form-group">
                                                <label class="form-control-label" for="input-email">Endereço de
                                                    E-mail</label>
                                                <input type="email" id="email" name="email" disabled
                                                    class="form-control form-control-alternative" placeholder="E-mail"
                                                    value="<%= trainee.userTrainee.email %>">
                                            </div>
                                        </div>
                                        <div class="col-lg-6">
                                            <div class="form-group">
                                                <label class="form-control-label"
                                                    for="input-email">Permissoes</label>
                                                <input type="text" id="fkPermissoes" name="fkPermissoes" disabled
                                                    class="form-control form-control-alternative"
                                                    placeholder="E-mail" value="Estagiário">
                    
                                            
                                            </div>
                                        </div>

                                    </div>
                                    <div class="row">
                                        <div class="col-lg-6">
                                            <div class="form-group">
                                                <label class="form-control-label" for="input-last-name">Data de
                                                    Registro</label>
                                                <input type="text" id="dataRegistro" name="dataRegistro" disabled
                                                    class="form-control form-control-alternative" placeholder="Registro"
                                                    value="<%= moment(trainee.createdAt).format('DD/MM/YYYY')%>  ">
                                            </div>
                                        </div>
                                    
                                    </div>
                                </div>
                                <hr class="my-4" />
                                <input type="hidden" value="<%= trainee.userTrainee.id  %>" id="idUser" name="idUser">
                                <a id="enable-update" class="btn btn-info" value="Editar"><i class="ni ni-ruler-pencil text-white"></i>Editar</a>
                                <input type="submit" id = "update-form" class="btn btn-success" value="Salvar Alterações"></input>
    
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Footer -->
            <% include ../partials/footer %>

        </div>
    </div>
    <!-- Argon Scripts -->
    <!-- Core -->
    <% include ../partials/scripts %>

</body>

</html>