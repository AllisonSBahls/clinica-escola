<!DOCTYPE html>
<html>
<% include ../layout %>

<body>
    <!-- Sidenav -->
    <% include ../partials/sidebar %>
    <!-- Main content -->
    <div class="main-content">
        <!-- Top navbar -->
        <% include ../partials/navbar %>
        <!-- Header -->
        <% include ../partials/header %>
        <!-- Page content -->
        <div style="justify-content: center !important" class="row mt-4">
            <div class="col-xl-11 mb-5 mb-xl-0">
                <div class="card shadow">
                        <% include ../partials/message %>

                    <div class="card-header border-0">
                        <div class="row align-items-center">
                            <div class="col">
                                <h3 class="mb-0">Estagiarios</h3>
                            </div>
                            <a href="/estagiario/register"  class="btn btn-outline-success">Cadastrar</a>
                            <a class="btn btn-outline-primary" id="btn-search">Filtrar</a>
                        </div>
                    </div>

                    <div id="campo-buscar">
                            <div class="col-lg-10" >
                          <form class="form-search-name">
                            <input type="text" name="nameTrainee" class="form-control form-control-alternative"
                                placeholder="Digite o nome">
                            <button class="btn btn-primary" id="search-name-trainee">Buscar</button>
                        </form>
                        </div>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-hover align-items-center table-md">
                            <thead class="thead-light">
                                <tr>
                                    <th scope="col">Nome Completo</th>
                                    <th scope="col">Telefone</th>
                                    <th class="col-4">E-mail</th>
                                    <th scope="col"></th>
                                    <th scope="col"></th>
                                    <th ></th>

                                    <!-- <th scope="col">Bounce rate</th> -->
                                </tr>
                            </thead>
                            <tbody id="table-trainee">
                                <% if(trainees.length > 0 ) {%>
                                <% for (var i = 0; i < trainees.length; i++) { %>
                                <tr>
                                    <th scope="row">
                                        <%= trainees[i].name %>
                                    </th>
                                    <td>
                                        <%= trainees[i].userTrainee.email %>
                                    </td>
                                    <td>
                                        <%= trainees[i].phone %>
                                    </td>
                                    <td class="col-pad">
                                        <a class="btn btn-primary primary btn-sm"
                                            href="estagiario/profile/<%= trainees[i].id %>"><img src="img/icons/common/eye.svg"></a>
                                    </td> 
                                    <td >
                                        <a class="btn btn-primary primary btn-sm"
                                            href="frequencias/<%= trainees[i].id %>"><img src="img/icons/common/list.svg"></a>
                                    </td>
                                    <td class="col-pad">
                                        <a class="btn btn-danger delete btn-sm"
                                            onclick="return confirm('Você confirma a exclusão?')"
                                            href="estagiario/delete/<%= trainees[i].userTrainee.id %>"><i class="ni ni-lg ni-basket text-white"></a>
                                    </td>
                                 


                                    <% } %>
                                    <% } %>
                                    <!-- <td>
                              <i class="fas fa-arrow-up text-success mr-3"></i> 46,53%
                            </td> -->
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <!-- Footer -->
        <% include ../partials/footer %>

    </div>
    <!-- Argon Scripts -->
    <!-- Core -->
    <% include ../partials/scripts %>

</body>

</html>