<!DOCTYPE html>
<html>
<% include ../layout %>

<body>
    <!-- Sidenav -->
    <% include ../partials/sidebar %>
    <!-- Main content -->
    <div class="main-content">
        <!-- Top navbar -->
        <% include ../partials/navbar %>
        <!-- Header -->
        <% include ../partials/profile/header %>
        <!-- Page content -->

        <div class="container-fluid mt--7">
            <div class="row">

                <div class="col-xl-4 order-xl-2 mb-5 mb-xl-0">
                </div>
                <div class="col-xl-10 order-xl-w">
                    <div class="card bg-secondary shadow">
                        <div class="card-header bg-white border-0">
                            <div class="row align-items-center">
                                <div class="col-8">
                                    <h3 class="mb-0">Paciente</h3>
                                </div>

                            </div>
                        </div>


                        <div class="card-body">

                            <form action="/paciente/save" method="POST" id="form-register-patient">
                                <h6 class="heading-small text-muted mb-4">Informações do Paciente</h6>
                                <div class="pl-lg-4">
                                    <h6 class="heading-small text-muted mb-4">Pessoais</h6>
                                    <div class="row">
                                        <div class="col-lg-6">
                                            <div class="form-group">
                                                <label class="form-control-label" for="input-username">Nome
                                                    Completo</label>
                                                <input type="text" id="nomeMaster" name="name" required
                                                    class="form-control form-control-alternative"
                                                    placeholder="Nome Completo">
                                            </div>
                                        </div>
                                        <div class="col-lg-6">
                                            <div class="form-group">
                                                <label class="form-control-label">Contato</label>
                                                <input type="text" id="telefone" name="phone" required
                                                    class="form-control form-control-alternative"
                                                    placeholder="Telefone">
                                            </div>

                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-lg-6">
                                            <div class="form-group">
                                                <label class="form-control-label" for="input-username">Data de
                                                    Nascimento</label>
                                                <input type="date" id="dateBirth" name="dateBirth"
                                                    class="form-control form-control-alternative"
                                                    placeholder="Data de Nascimento">
                                            </div>
                                        </div>
                                        <div class="col-lg-6">
                                            <div class="form-group">
                                                <div class="form-group">
                                                    <label class="form-control-label">Genero</label>
                                                    <select class="form-control" name="sexo" id="gender"
                                                        data-placeholder="Selecione">
                                                        <option value="1">Feminino</option>
                                                        <option value="2">Masculino</option>
                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-lg-5">
                                            <div class="form-group">
                                                <label class="form-control-label"
                                                    for="input-username">Escolaridade</label>
                                                <select class="form-control" id="schooling" name="schooling"
                                                    data-placeholder="Selecione">
                                                    <option value="1">Ensino Fundamento</option>
                                                    <option value="2">Ensino Médio</option>
                                                    <option value="3">Ensino Superior</option>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="col-lg-3">
                                            <div class="form-group">
                                                <div class="form-group">
                                                    <label class="form-control-label">Estado Civil</label>
                                                    <select class="form-control" name="maritalstatus" id="maritalstatus"
                                                        data-placeholder="Selecione">
                                                        <option value="1">Solteiro(a)</option>
                                                        <option value="2">Casado(a)</option>
                                                        <option value="3">Divorciado(a)</option>
                                                        <option value="4">Viúvo(a) </option>
                                                        <option value="5">Separado(a)</option>

                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-lg-4">
                                            <div class="form-group">
                                                <div class="form-group">
                                                    <label class="form-control-label">Conjugue</label>
                                                    <input type="text" name="spouse" id="spouse"
                                                    class="form-control form-control-alternative"
                                                    placeholder="Conjugue">
                                                   
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <hr class="my-4" />
                                    <h6 class="heading-small text-muted mb-4">Localização</h6>
                                    <form method="get" action=".">
                                    <div class="row">
                                        <div class="col-lg-5">
                                            <div class="form-group">
                                                <label class="form-control-label" for="input-email">CEP</label>
                                                <input type="email" id="cep" name="cepCidade"  onblur="pesquisacep(this.value);"
                                                    class="form-control form-control-alternative" placeholder="CEP">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-lg-8">
                                            <div class="form-group">
                                                <label class="form-control-label" for="input-email">Endereço</label>
                                                <input type="email" id="rua" name="address" 
                                                    class="form-control form-control-alternative" placeholder="Endereço">
                                            </div>
                                        </div>
                                        <div class="col-lg-4">
                                            <div class="form-group">
                                                <label class="form-control-label" for="input-email">Número</label>
                                                <input type="email" id="number" name="number" 
                                                    class="form-control form-control-alternative" placeholder="Número">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-lg-6">
                                            <div class="form-group">
                                                <label class="form-control-label" for="input-email">Bairro</label>
                                                <input type="email" id="bairro" name="district"
                                                    class="form-control form-control-alternative" placeholder="Bairro">
                                            </div>
                                        </div>
                                        <div class="col-lg-4">
                                            <div class="form-group">
                                                <label class="form-control-label" for="input-email">Cidade</label>
                                                <input type="email" id="cidade" name="country"
                                                    class="form-control form-control-alternative" placeholder="Cidade">
                                            </div>
                                        </div>
                                        <div class="col-lg-2">
                                            <div class="form-group">
                                                <label class="form-control-label" for="input-email">Estado</label>
                                                <input type="email" id="uf" name="uf" 
                                                    class="form-control form-control-alternative" placeholder="Estado">
                                            </div>
                                        </div>
                                    </div>
                                </form>
                                    <hr class="my-4" />
                                    <h6 class="heading-small text-muted mb-4">Usuário</h6>
                                    <div class="row">
                                        <div class="col-lg-6">
                                            <div class="form-group">
                                                <label class="form-control-label" for="input-email">Endereço de
                                                    E-mail</label>
                                                <input type="email" id="email" name="email" required
                                                    class="form-control form-control-alternative" placeholder="E-mail">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-lg-6">
                                            <div class="form-group">
                                                <label class="form-control-label">Senha</label>
                                                <input type="password" id="senha" name="password"
                                                    class="form-control form-control-alternative" placeholder="Senha"
                                                    required value="">
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <hr class="my-4" />
                                <input onclick="registerPatient();" class="btn btn-success" value="Salvar Registro"></input>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Footer -->
            <% include ../partials/footer %>

        </div>
    </div>
    <!-- Argon Scripts -->
    <!-- Core -->
    <% include ../partials/scripts %>

</body>

</html>