<!DOCTYPE html>
<html>
<% include ../layout %>

<body>
    <!-- Sidenav -->
    <% include ../partials/sidebar %>
    <!-- Main content -->
    <div class="main-content">
        <!-- Top navbar -->
        <% include ../partials/navbar %>
        <!-- Header -->
        <% include ../partials/header %>
        <!-- Page content -->
        <div style="justify-content: center !important" class="row mt-4">
            <div class="col-xl-11 mb-5 mb-xl-0">
                <div class="card shadow">
                    <div class="card-header border-0">
                        <div class="row align-items-center">
                            <div class="col">
                                <h3 class="mb-0">Recepcionistas</h3>
                            </div>
                        </div>
                    </div>
                    <div class="table-responsive">
                        <table class="table align-items-center table-flush">
                            <thead class="thead-light">
                                <tr>
                                    <th scope="col">Nome Completo</th>
                                    <th scope="col">Telefone</th>
                                    <th scope="col">E-mail</th>
                                    <th scope="col"></th>
                                    <th scope="col"></th>

                                    <!-- <th scope="col">Bounce rate</th> -->
                                </tr>
                            </thead>
                            <tbody>
                                <% if(recepcionistas.length > 0 ) {%>
                                <% for (var i = 0; i < recepcionistas.length; i++) { %>
                                <tr>
                                    <th scope="row">
                                        <%= recepcionistas[i].nomeRecepcionista %>
                                    </th>
                                    <td>
                                        <%= recepcionistas[i].telefoneRecepcionista %>
                                    </td>
                                    <td>
                                        <%= recepcionistas[i].emailRecepcionista %>
                                    </td>
                                    <td>
                                        <a class="btn btn-danger delete"
                                            onclick="return confirm('Você confirma a exclusão?')"
                                            href="recepcionista/delete?idRecepcionista=<%= recepcionistas[i].idRecepcionista %>">Excluir</a>
                                    </td>
                                    <td>
                                        <a class="btn btn-primary primary"
                                            href="recepcionista/profile?idRecepcionista=<%= recepcionistas[i].idRecepcionista %>">Alterar</a>
                                    </td>


                                    <% } %>
                                    <% } %>
                                    <!-- <td>
                              <i class="fas fa-arrow-up text-success mr-3"></i> 46,53%
                            </td> -->
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <!-- Footer -->
        <% include ../partials/footer %>

    </div>
    </div>
    <!-- Argon Scripts -->
    <!-- Core -->
    <% include ../partials/scripts %>

</body>

</html>