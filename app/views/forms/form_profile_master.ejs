<!DOCTYPE html>
<html>
<% include ../layout %>

<body>
    <!-- Sidenav -->
    <% include ../partials/sidebar %>
    <!-- Main content -->
    <div class="main-content">
        <!-- Top navbar -->
        <% include ../partials/navbar %>
        <!-- Header -->
        <% include ../partials/profile/header %>
        <!-- Page content -->

        <div class="container-fluid mt--7">
            <div class="row">
                <div class="col-xl-4 order-xl-2 mb-5 mb-xl-0">
                </div>
                <div class="col-xl-10 order-xl-w">
                    <div class="card bg-secondary shadow">
                            <% include ../partials/message %>
                        <div class="card-header bg-white border-0">
                            <div class="row align-items-center">
                                <div class="col-8">
                                    <h3 class="mb-0">Supervisores</h3>
                                </div>

                            </div>
                        </div>
                        <div class="card-body">
                            <form action="/supervisor/update/<%= master.id %>" method="POST">
                                    <h6 class="heading-small text-muted mb-4">Informações do Supervisor</h6>
                                    <div class="pl-lg-4">
                                        <div class="row">
                                            <div class="col-lg-6">
                                                <div class="form-group">
                                                    <label class="form-control-label" for="input-username">Nome
                                                        Completo</label>
                                                    <input type="text" id="nome" name="name"
                                                        class="form-control form-control-alternative"
                                                        placeholder="Nome Completo" disabled
                                                        value="<%= master.name %>">
                                                </div>
                                            </div>
                                            <div class="col-lg-6">
                                                <div class="form-group">
                                                    <label class="form-control-label">Contato</label>
                                                    <input type="text" id="telefone"
                                                        name="phone"
                                                        class="form-control form-control-alternative"
                                                        placeholder="Telefone" disabled
                                                        value="<%= master.phone %>">
                                                </div>

                                            </div>
                                        </div>
                                        <hr class="my-4" />
                                        <div class="row">
                                            <div class="col-lg-6">
                                                <div class="form-group">
                                                    <label class="form-control-label" for="input-email">Endereço de
                                                        E-mail</label>
                                                    <input type="email" id="email"
                                                        name="email" disabled
                                                        class="form-control form-control-alternative"
                                                        placeholder="E-mail"
                                                        value="<%= master.userMaster.email %>">
                                                </div>
                                            </div>
                                            <div class="col-lg-6">
                                                <div class="form-group">
                                                    <label class="form-control-label"
                                                        for="input-email">Permissão</label>
                                                    <input type="text" id="fkPermissoes" name="fkPermissoes" disabled
                                                        class="form-control form-control-alternative"
                                                        placeholder="E-mail" value="Supervisor">
                                                </div>
                                            </div>


                                        </div>

                                        <div class="row">

                                            <div class="col-lg-6">
                                                <div class="form-group">
                                                    <label class="form-control-label" for="input-last-name">Data de
                                                        Registro</label>
                                                    <input type="text" id="dataRegistro" name="dataRegistro" disabled
                                                        class="form-control form-control-alternative"
                                                        placeholder="Registro" value="<%= moment(master.createdAt).format('DD/MM/YYYY')  %>">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <hr class="my-4" />
                                    <input type="hidden" value="<%= master.userMaster.id  %>"
                                    id="id" name="idUser">                            
                                    <input type="hidden" value="<%= master.id  %>"
                                        id="id" name="id">
                                    <input id="enable-update" class="btn btn-info" value="Editar"></input>
                                    <input type="submit" id = "update-form" class="btn btn-success" value="Salvar Alterações"></input>

                                </form>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Footer -->
            <% include ../partials/footer %>

        </div>
    </div>
    <!-- Argon Scripts -->
    <!-- Core -->
    <% include ../partials/scripts %>

</body>

</html>