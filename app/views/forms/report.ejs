<!DOCTYPE html>
<html>
<% include ../layout %>
<script>
    function funcao_pdf() {
        var estagiario = document.getElementById('nameTrainee')
        var supervisor = document.getElementById('nameMaster')
        var data = document.getElementById('dateConsult')
        var paciente = document.getElementById('namePatient')
        var relatório = document.getElementById('report')


        var janela = window.open('', '', 'width=1366px heigh=728px');
        janela.document.write('<html><head>')
        janela.document.write('<title>Relátorio da Consulta</title></head>')
        janela.document.write('<body>')
        janela.document.write('<h1>Relátorio da Consulta</title></h1>')

        janela.document.write('<div class="ml-6">'+
            '<div>')
        janela.document.write('<p class="form-control-label"> Estagiário: ' + estagiario.value + '</p>')
        janela.document.write('</div><div>')
        janela.document.write('<p class="form-control-label"> Supervisor: ' + supervisor.value + '</p>')
        janela.document.write('</div><div>')
        janela.document.write('<p class="form-control-label"> Data da Consulta: ' + data.value + '</p>')
        janela.document.write('</div><div>')
        janela.document.write('<p class="form-control-label"> Nome do Paciente: ' + paciente.value + '</p>') 
        janela.document.write('</div><div>')
        janela.document.write('<label class="form-control-label"> Relatório da Consulta</label>') 
        janela.document.write('<textarea style="height:500px"> ' + relatório.value + '</textarea>') 

        janela.document.write('</div></div>')
        janela.document.write('</body></html>')
        janela.document.cose();
        janela.print();

    }

</script>

<body>
    <div class="main-content">
        <div class="container-fluid mt--7">
            <div class="row">
                <div class="col-xl-4 order-xl-2 mb-5 mb-xl-0">
                </div>
                <div class="col-xl-10 order-xl-w">
                    <div class="card bg-secondary shadow">
                        <div class="card-header bg-white border-0">
                            <div class="row align-items-center">
                                <div class="col-8">
                                    <h3 class="mb-0">Recepcionista</h3>
                                </div>

                            </div>
                        </div>
                        <div class="card-body">

                            <form action="/relatorios/save" method="POST">
                                <h6 class="heading-small text-muted mb-4">Relatório Da Consulta</h6>
                                <div class="pl-lg-4">
                                    <div class="row">
                                        <div class="col-lg-6">
                                            <div class="form-group">
                                                <label class="form-control-label"
                                                    for="input-username">Estagiario</label>
                                                <input type="text" id="nameTrainee" name="name" disabled
                                                    class="form-control form-control-alternative" required
                                                    >
                                            </div>
                                        </div>
                                        <div class="col-lg-6">
                                            <div class="form-group">
                                                <label class="form-control-label">Supervisor</label>
                                                <input type="text" id="nameMaster" name="name" disabled
                                                    class="form-control form-control-alternative" required
                                                   >
                                            </div>
                                        </div>
                                    </div>
                                    <hr class="my-4" />

                                    <div class="row">
                                        <div class="col-lg-6">
                                            <div class="form-group">
                                                <label class="form-control-label" for="input-username">Nome do
                                                    Paciente</label>
                                                <input type="text" id="namePatient" name="name" disabled
                                                    class="form-control form-control-alternative" require
                                                   >
                                            </div>
                                        </div>
                                        <div class="col-lg-6">
                                            <div class="form-group">
                                                <label class="form-control-label">Data da Consulta</label>
                                                <input type="text" id="dateConsult" name="phone" disabled
                                                    class="form-control form-control-alternative" require
                                               >
                                            </div>
                                        </div>
                                    </div>
                                    <hr class="my-4" />
                                    <div class="row">
                                        <div class="col-lg-12">
                                            <div class="form-group">
                                                <label class="form-control-label" for="input-email">Relatório</label>
                                                <textarea id="report" name="report" style="height:500px;" disabled
                                                    class="form-control form-control-alternative"
                                                    require></textarea>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">

                                <div class="col-lg-3">
                                    <div class="form-group">
                                        <label class="form-control-label">Data de Envio</label>
                                        <input type="text" id="telefoneRecepcionista" name="phone" disabled
                                            class="form-control form-control-alternative" required>
                                    </div>
                                </div>
                                <div class="col-lg-3">
                                        <div class="form-group">
                                            <label class="form-control-label">Data de Edição</label>
                                            <input type="text" id="telefoneRecepcionista" name="phone" disabled
                                                class="form-control form-control-alternative" required>
                                        </div>
                                    </div>
                            </div>

                                <hr class="my-4" />
                                <input type="button" onclick="funcao_pdf()" class="btn btn-primary" value="Editar"></input>

                                <input type="button" onclick="funcao_pdf()" class="btn btn-info" value="Gerar PDF do Relatório"></input>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</body>

</html>